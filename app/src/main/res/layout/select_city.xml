<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:id="@+id/title_top">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="当前城市：北京"
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/title_back"
            android:background="#A71717"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_top">

        <EditText
            android:id="@+id/search_city"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="4.0dp"
            android:layout_marginEnd="4.0dp"
            android:layout_marginLeft="4.0dp"
            android:layout_marginRight="4.0dp"
            android:layout_marginStart="4.0dp"
            android:layout_marginTop="4.0dp"
            android:imeOptions="actionSearch"
            android:background="@drawable/contact_search_box_edittext_keyword_background"
            android:drawableLeft="@drawable/magnifying_glass"
            android:drawablePadding="6.0dp"
            android:hint="搜索全国城市（中文）"
            android:textColor="#ff000000"
            android:textColorHint="#ffcccccc"
            android:textSize="15.0dp" />

        <ListView
            android:id="@+id/title_list"
            android:layout_below="@+id/search_city"
            android:choiceMode="singleChoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

        </ListView>

    </RelativeLayout>

</RelativeLayout>
